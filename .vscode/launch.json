{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/Debug/Raytracer",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "premake+build debug",
      "setupCommands": [

        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
      ],
    },
    {
      "name": "Run",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/Release/Raytracer",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "premake+build release",
      "setupCommands": [
        {
          "description": "Skip library files",
          "text": "-interpreter-exec console \"skip -gfi **/bits/*.h\""
        }
      ],
    }
  ]
}